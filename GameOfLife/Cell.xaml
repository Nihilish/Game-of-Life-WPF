<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:GameOfLife">

    <!--Style applied to the individual cells of the grid-->
    <Style x:Key="CellView" TargetType="{x:Type local:Cell}">

        <Setter Property="Background" Value="DarkSlateGray"/>
        <!--This creates the illusion of a broder around the StackPanels-->
        <Setter Property="Margin" Value="0.5 0.5 0.5 0.5"></Setter>

    </Style>

    
</ResourceDictionary>